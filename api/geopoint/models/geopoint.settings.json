{
  "kind": "collectionType",
  "collectionName": "geopoints",
  "info": {
    "name": "geopoint"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "latitude": {
      "type": "string",
      "regex": "^(\\+|-)?(?:90(?:(?:\\.0{1,6})?)|(?:[0-9]|[1-8][0-9])(?:(?:\\.[0-9]{1,6})?))$",
      "required": true
    },
    "longitude": {
      "type": "string",
      "regex": "^(\\+|-)?(?:180(?:(?:\\.0{1,6})?)|(?:[0-9]|[1-9][0-9]|1[0-7][0-9])(?:(?:\\.[0-9]{1,6})?))$",
      "required": true
    }
  }
}
